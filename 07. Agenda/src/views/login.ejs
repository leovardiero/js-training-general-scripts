<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Login</h1>
      <p class = "text-center lead">Faça o login ou crie sua conta</p>

      <%- include('includes/messages.ejs') %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça Seu Cadastro</h4>
          <small>Se você ainda não possui uma conta, crie uma abaixo:</small>

          <form action="/login/register" method="POST" class="signinForm">
            <!-- Input CSRF Token -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <!-- Form Fields -->
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email">

              <label>Senha</label>
              <input type="password" class="form-control" name="password">
              
            </div>
            <button type="submit" class="btn btn-primary">Criar Conta</button>
          </form>

        </div>
        
        <div class="col-lg">
          <h4>Faça Seu Login</h4>
          <small>Se você já possui uma conta, faça o login abaixo:</small>

          <form action="/login/login" method="POST"  class="loginForm">
            <!-- Input CSRF Token -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <!-- Form Fields -->
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email">
              <div class="emailMessage"></div>
              <label>Senha</label>
              <input type="password" class="form-control" name="password">
              <div class="passwordMessage"></div>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
          
        </div>

      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer.ejs')%>