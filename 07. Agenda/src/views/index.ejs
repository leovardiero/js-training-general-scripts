<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Agenda</h1>
      

      <%- include('includes/messages.ejs') %> 

      <!-- Verify if its logged -->
      <% if (contacts != -1) { %> 
        <div class="responsive-table">
          <p class = "text-center lead">Seus contatos abaixo:</p>
          <% if (contacts.length > 0) { %>
            <table class="table my-3">
              <% contacts.forEach(contact => { %>
                <tr>
                  <td><%= contact.name %> </td>
                  <td><%= contact.lastname %> </td>
                  <td><%= contact.email %> </td>
                  <td><%= contact.phone %> </td>
                  <td><a href="/contact/<%= contact._id %>"> Editar </a></td>
                  <td><a class="text-danger" href="/contact/delete/<%= contact._id %>"> Remover </a></td>
                </tr>
              <% }); %>
            </table> 
          <% } else { %>
            <p class="text-center lead">Nenhum contato foi encontrado</p>
          <% } %> 
        </div>
      <% } else { %>
        <p class = "text-center lead">Fa√ßa o login para ou crie sua conta! </p>
      <% } %>    
    
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer.ejs')%>